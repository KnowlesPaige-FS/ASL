{% extends 'layouts/_main.twig' %}

{% block maincontent %}
    <h1 class="text-center">
        {% if galaxy is defined %}
            Edit
        {% else %}
            New
        {% endif %}
        Galaxy Form
    </h1>
    <form class="entry" method="POST" enctype="multipart/form-data" action="/galaxies{% if galaxy and galaxy.id is defined %}/{{ galaxy.id|trim }}{% endif %}">

        <div class="flex-col justify-content-center">
            <div class="input">
                <label for="name">Name</label>
                <input id="name" name="name" type="text"
                {% if galaxy is defined %}
                    value="{{ galaxy.name }}"
                {% endif %}/>
            </div>

            <div class="input">
                <label for="size">Size</label>
                <input id="size" name="size" type="number"
                {% if galaxy is defined %}
                    value="{{ galaxy.size }}"
                {% endif %}/>
            </div>

            <div class="input">
                <label for="description">Description</label>
                <textarea class="textarea" id="description" name="description">{% if galaxy is defined %}{{ galaxy.description }}{% endif %}</textarea>
            </div>

            <button class="align-self-center" type="submit">Submit</button>
        </div>

        <div>
            <label for="image">Upload Image:</label>
            <br/>
            <input type="file" name="image" id="image" />
        </div>
    </form>
{% endblock maincontent %}
