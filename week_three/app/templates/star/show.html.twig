{% extends 'layouts/_main.twig' %}

{% block maincontent %}
    <div class="card">
        <h1>{{ star.name }}</h1>
        <p><strong>Description:</strong> {{ star.description }}</p>
        <p><strong>Size:</strong> {{ star.size }}</p>
        
        {% if star.Galaxy is defined %}
            <p><strong>Belongs to Galaxy:</strong> {{ star.Galaxy.name }}</p>
        {% else %}
            <p>Does not belong to any galaxy.</p>
        {% endif %}
        
        {% if star.Planet is defined and star.Planet|length > 0 %}
            <h3>
                Planets belonging to Star:
                <ul>
                    {% for planet in star.Planet %}
                        <li>{{ planet.name }}</li>
                    {% endfor %}
                </ul>
            </h3>
        {% else %}
            <h3>No planets belong to this star.</h3>
        {% endif %}

         <div>
            {% if star.extension is not null and star.extension != "" %}
                <img src="/uploads/stars/images/{{ star.id }}{{ star.extension }}"/>
            {% endif %}
        </div>

        <div class="btns">
            <a href="/stars/{{ star.id }}/edit" class="btn">Edit</a>
            <a href="/stars/{{star.id}}/delete" class="btn">Delete</a>
        <div> 
        
    </div>
{% endblock maincontent %}
