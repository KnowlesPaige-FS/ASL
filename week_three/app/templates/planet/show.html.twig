{% extends 'layouts/_main.twig' %}

{% block maincontent %}
    <div class="card">
        <h1>{{ planet.name }}</h1>
        <p><strong>Description:</strong> {{ planet.description }}</p>
        <p><strong>Size:</strong> {{ planet.size }}</p>
        
        {% if planet.Stars is defined and planet.Stars.length > 0 %}
            <h3>
                Belongs to Stars:
                <ul>
                    {% for star in planet.Stars %}
                        <li>{{ star.name }}</li>
                    {% endfor %}
                </ul>
            </h3>
        {% else %}
            <h3>Does not belong to any stars.</h3>
        {% endif %}

        <div>
            {% if planet.extension is not null and planet.extension != "" %}
                <img src="/uploads/planets/images/{{ planet.id }}{{ planet.extension }}"/>
            {% endif %}
        </div>

        <div class="btns">
            <a href="/planets/{{ planet.id }}/edit" class="btn">Edit</a>
            <a href="/planets/{{ planet.id }}/delete" class="btn">Delete</a>
        </div> 
    </div>
{% endblock maincontent %}
